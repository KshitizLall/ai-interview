# Production environment variables for backend
# Copy this file to .env and fill in your values

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# App Configuration
DEBUG=false
APP_NAME=AI Interview Prep API
VERSION=1.0.0

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
EXPORT_DIR=exports

# Database (for future use)
DATABASE_URL=sqlite:///./interview_prep.db

# Security (add these for production)
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=https://your-frontend-domain.com,https://your-frontend.onrender.com