# InterviewBot API Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
APP_NAME="InterviewBot API"
DEBUG=false
ENVIRONMENT=production
VERSION=1.0.0

# Security Settings - CRITICAL: Change these in production!
JWT_SECRET_KEY=your-super-secret-jwt-key-change-me-in-production-must-be-at-least-32-characters-long
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ISSUER=InterviewBot-API
JWT_AUDIENCE=InterviewBot-Users

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_MAX_LENGTH=128
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_SIGNUP=3/minute
RATE_LIMIT_GENERAL=100/minute

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
SESSION_TIMEOUT_MINUTES=30

# CORS Settings - Update for your frontend domains
ALLOWED_HOSTS=["http://localhost:3000","https://your-frontend-domain.com"]
ALLOWED_ORIGIN_REGEX=https://.*\.vercel\.app

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
EXPORT_DIR=exports

# Server Configuration (for deployment)
PORT=8000
HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO

# Admin Settings
ADMIN_EMAILS=["admin@yourcompany.com"]

# Development Settings (only used when DEBUG=true)
RELOAD=false